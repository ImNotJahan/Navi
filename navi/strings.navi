(set (substr str start)
	(if (= start 0)
		str
		(substr (string (tail str)) (- start 1))))
		
(set (=string a b)
	(if (= (head a) (head b))
		(if (and (pair? (tail a)) (pair? (tail b)))
			(=string (tail a) (tail b))
			(if (or (pair? (tail a)) (pair? (tail b)))
				false
				true))
		false))

~ add char to string
(set (+ctos str char)
	(string (append str (pair char null))))

(set (+string str1 str2)
	(if (non_null? str2)
		(+string 
			(+ctos str1 (head str2))
			(tail str2))
		str1))